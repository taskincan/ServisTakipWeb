@{
    Layout = null;
}

<!DOCTYPE html>
 
<html lang="en">

<head>

    <link rel="shortcut icon" href="~/Content/img/LoginUserLogo.png" />

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <!-- Bootstrap Core CSS -->
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="~/Content/css/sb-admin.css" rel="stylesheet">

    <!-- Custom Fonts -->
    <link href="~/Content/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">

</head>

<body>
    <section id="container">

        <div id="wrapper">

            <!-- Navigation -->
            <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="/Musteri/AnaSayfa">@ServisTakipWeb.Connection.musteri.ToString()</a>
                </div>

                <!-- Top Menu Items -->
                <ul class="nav navbar-right top-nav">
                    <li class="dropdown">
                        <a href="/" class="dropdown-toggle" data-toggle="dropdown">
                            <i class="fa fa-user"></i> @ServisTakipWeb.Connection.adi.ToString()
                            <b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu">
                            <li>
                                <a href="/Musteri/Profile"><i class="fa fa-fw fa-user"></i> @ServisTakipWeb.Connection.profile.ToString()</a>
                            </li>
                            <li class="divider"></li>
                            <li>
                                <a href="/"><i class="fa fa-fw fa-power-off"></i> Log Out</a>
                            </li>
                        </ul>
                    </li>
                </ul>

                <!-- Sidebar Menu Items - These collapse to the responsive navigation menu on small screens -->
                <div class="collapse navbar-collapse navbar-ex1-collapse">
                    <ul class="nav navbar-nav side-nav">
                        <li>
                            <a href="javascript:;" data-toggle="collapse" data-target="#demo">
                                <i class="fa fa-fw fa-users"></i> @ServisTakipWeb.Connection.yonetici.ToString() <i class="fa fa-fw fa-caret-down"></i>
                            </a>
                            <ul id="demo" class="collapse">
                                <li>
                                    <a href="/Musteri/YoneticiBilgileri">  <i class="fa fa-fw fa-table"></i> @ServisTakipWeb.Connection.yoneticiBilgileri.ToString() </a>
                                </li> 
                                <li>
                                    <a href="/Musteri/YoneticiBilgileri/Create">  <i class="fa fa-fw fa-edit"></i> @ServisTakipWeb.Connection.yoneticiEkle.ToString() </a>
                                </li>
                            </ul>
                        </li>
                        <li>
                            <a href="/Musteri/CalisanBilgileri"><i class="fa fa-fw fa-user"></i> @ServisTakipWeb.Connection.calisanBilgileri.ToString()</a>
                        </li> 
                    </ul>
                </div>
                <!-- /.navbar-collapse -->
            </nav>

            <div id="page-wrapper">

                <div class="container-fluid">

                    @RenderBody()
                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- /#page-wrapper -->

        </div>
    </section>
    <!-- /#wrapper -->

    <!-- jQuery -->
    @Scripts.Render("~/js/jquery.js")

    <!-- Bootstrap Core JavaScript -->
    @Scripts.Render("~/js/bootstrap.min.js") 
  
    @Scripts.Render("~/js/dataTables.bootstrap.min.js")
    @Scripts.Render("~/js/dataTables.colReorder.min.js")
    @Scripts.Render("~/js/jquery.dataTables.min.js")

    @RenderSection("scripts", required: false)
</body>

</html>

