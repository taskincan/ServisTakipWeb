@using ServisTakipWeb.Areas.Musteri.Models
@model MusteriCalisanBilgileri 
    
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Musteri/Views/Shared/MusteriLayout.cshtml";
}

@using (Html.BeginForm("Create", "CalisanBilgileri", FormMethod.Post, new { id = "frmCreate", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
      
    <div class="row">
        <div class="col-md-2">
            @Html.LabelFor(model => model.UserName)
        </div>
        <div class="col-md-4">
            <input class="form-control" placeholder="UserName" name="UserName" type="text" value="@Model.UserName" required>
            @ViewBag.Message
        </div>

        <div class="col-md-6">
        </div>
    </div>
    <div class="row" style="margin-top: 10px">
        <div class="col-md-2">
            @Html.LabelFor(model => model.Password)
        </div>
        <div class="col-md-4">
            <input class="form-control" placeholder="Password" name="Password" type="text" value="@Model.Password" required>
        </div>
        <div class="col-md-6">
        </div>
    </div>
     
    <div class="row" style="margin-top:10px ">
        <div class="col-md-4"></div>

        <div class="col-md-2">
            <button class=" btn btn-outline-primary btn-block" type="submit" value="Kaydet">
                Kaydet
            </button>
        </div>
    </div>

}

<script>
    function SubmitForm() {
        $("#frmCreate").submit();
    }
</script>
