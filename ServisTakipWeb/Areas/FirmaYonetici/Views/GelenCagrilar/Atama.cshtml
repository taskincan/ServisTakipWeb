                    </div>
                    <div class="col-md-6">
                        <div class="col-md-1">
                            @Html.LabelFor(model => model.AcilMi)
                        </div>
                        <div class="col-md-4">
                            @Html.CheckBoxFor(model => model.AcilMi)
                        </div>
                        <div class="col-md-6">
