                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <i class="glyphicon glyphicon-calendar"></i>
                                    </span>
                                    @Html.TextBoxFor(model => model.VarisTarih, new { @class = "form-control datepicker", id = "datetimepickerSaatli", placeholder = "Varış Tarihi" })
