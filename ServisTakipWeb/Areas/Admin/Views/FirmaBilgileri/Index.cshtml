@model IEnumerable<ServisTakipWeb.Areas.Admin.Models.FirmaBilgileri>

@{
    ViewBag.Title = "Admin|Firma Bilgileri";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

<title>Firma Bilgileri</title>

<div class="row">

    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title"><i class="fa fa-table fa-fw"></i> Firma Bilgileri</h3>
        </div>
        <div class="panel-body">
            <div class="row form-group">
                <div class="col-md-2"> 
                    <a href="@Url.Action("Create", "FirmaBilgileri")" class="btn btn-success">
                        Firma Ekle <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                    </a>
                </div>
            </div>
            <div class="table-responsive">
                <table id="data" class="table table-bordered table-hover table-striped">
                    <thead>
                        <tr>
                            <th class="col-md-2">@Html.DisplayNameFor(model => model.FirmaKodu)</th>
                            <th class="col-md-2">@Html.DisplayNameFor(model => model.FirmaAdi)</th>
                            <th class="col-md-2">@Html.DisplayNameFor(model => model.YetkiliKisi)</th> 
                            <th class="col-md-2">@Html.DisplayNameFor(model => model.UserName)</th>
                            <th class="col-md-2">@Html.DisplayNameFor(model => model.Password)</th> 
                            <th class="col-md-1">@Html.DisplayNameFor(model => model.CreateDate)</th> 
                            <th class="col-md-1">
                            </th>
                            <th class="col-md-1">
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="col-md-2">@Html.DisplayFor(modelItem => item.FirmaKodu)</td>
                                <td class="col-md-2">@Html.DisplayFor(modelItem => item.FirmaAdi)</td>
                                <td class="col-md-2">@Html.DisplayFor(modelItem => item.YetkiliKisi)</td> 
                                <td class="col-md-2">@Html.DisplayFor(modelItem => item.UserName)</td>
                                <td class="col-md-2">@Html.DisplayFor(modelItem => item.Password)</td> 
                                <td class="col-md-2">@Html.DisplayFor(modelItem => item.CreateDate)</td>
                                <td class="col-md-1">
                                    <a href="@Url.Action("Edit", "FirmaBilgileri", new { id = item.ID })" class="btn btn-success">
                                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                                    </a>
                                </td>
                                <td class="col-md-1">
                                    <a href="@Url.Action("", "FirmaBilgileri", new { id = item.ID })" class="btn btn-danger">
                                        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                                    </a>
                                </td> 
                            </tr>
                        }
                    </tbody>

                </table>
            </div> 
        </div>
    </div>


</div>

@section Scripts
{
    <script type="text/javascript">
        $(function () {
            $("#data").dataTable({
                "pagingType": "full_numbers"
                        , "scrollY": "600px"
                        , "columnDefs": [
                            { "width": "45px", "targets": 0 }
                            , { "width": "45px", "targets": 1 }
                            , { "width": "45px", "targets": 2 }
                            , { "width": "45px", "targets": 3 }
                            , { "width": "45px", "targets": 4 }
                            , { "width": "45px", "targets": 5 }
                            , { "width": "45px", "targets": 6 }
                            , { "width": "45px", "targets": 7 }
                            , { "width": "45px", "targets": 8 }
                        ]
                        , "order": [[1, "desc"]]
                        , "dom": 'Rlfrtip'
                        , "stateSave": "true"
                        , "lengthMenu": [[-1, 10, 20, 50, 100], ["All", 10, 20, 50, 100]]
            });
        });
    </script>
}