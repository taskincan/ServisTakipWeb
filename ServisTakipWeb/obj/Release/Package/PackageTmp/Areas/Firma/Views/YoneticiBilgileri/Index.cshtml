@model IEnumerable<ServisTakipWeb.Areas.Firma.Models.FirmaYönetici>

@{
    ViewBag.Title = "Firma | Yönetici Bilgileri";
    Layout = "~/Areas/Firma/Views/Shared/FirmaLayout.cshtml";
} 

<title>Yönetici Bilgileri</title>

<div class="row">

    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title"><i class="fa fa-table fa-fw"></i> Yönetici Bilgileri</h3>
        </div>
        <div class="panel-body">
            <div class="row form-group">
                <div class="col-md-2"> 
                    <a href="@Url.Action("Create", "YoneticiBilgileri")" class="btn btn-success">
                        Yönetici Ekle <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                    </a>
                </div>
            </div>
            <div class="table-responsive">
                <table id="data" class="table table-bordered table-hover table-striped">
                    <thead>
                        <tr>
                            <th class="col-md-2">@Html.DisplayNameFor(model => model.FyID)</th>
                            <th class="col-md-4">@Html.DisplayNameFor(model => model.UserName)</th>
                            <th class="col-md-2">@Html.DisplayNameFor(model => model.Password)</th>
                            <th class="col-md-2">@Html.DisplayNameFor(model => model.Ad)</th>
                            <th class="col-md-4">@Html.DisplayNameFor(model => model.Soyad)</th>
                            <th class="col-md-4">@Html.DisplayNameFor(model => model.Gsm)</th>
                            <th class="col-md-4">@Html.DisplayNameFor(model => model.Email)</th>
                            <th class="col-md-2">@Html.DisplayNameFor(model => model.FirmaID)</th>
                            <th class="col-md-2">@Html.DisplayNameFor(model => model.CreateDate)</th>
                            <th class="col-md-3"></th>
                            <th class="col-md-3"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="col-md-2">@Html.DisplayFor(modelItem => item.FyID)</td>
                                <td class="col-md-4">@Html.DisplayFor(modelItem => item.UserName)</td>
                                <td class="col-md-2">@Html.DisplayFor(modelItem => item.Password)</td>
                                <td class="col-md-2">@Html.DisplayFor(modelItem => item.Ad)</td>
                                <td class="col-md-4">@Html.DisplayFor(modelItem => item.Soyad)</td>
                                <td class="col-md-4">@Html.DisplayFor(modelItem => item.Gsm)</td>
                                <td class="col-md-4">@Html.DisplayFor(modelItem => item.Email)</td>
                                <td class="col-md-4">@Html.DisplayFor(modelItem => item.FirmaID)</td>
                                <td class="col-md-2">@Html.DisplayFor(modelItem => item.CreateDate)</td>
                                <td class="col-md-3"> 
                                    <a href="@Url.Action("Edit", "YoneticiBilgileri", new { id = item.FyID })" class="btn btn-success">
                                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                                    </a>
                                </td>
                                <td class="col-md-3">
                                    <a href="@Url.Action("", "YoneticiBilgileri", new { id = item.FyID })" class="btn btn-danger">
                                        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div> 
        </div>
    </div>
</div>  