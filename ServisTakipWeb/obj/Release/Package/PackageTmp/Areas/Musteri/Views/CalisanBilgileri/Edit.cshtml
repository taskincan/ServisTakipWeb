@using ServisTakipWeb.Areas.Musteri.Models
@model MusteriCalisanBilgileri

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Musteri/Views/Shared/MusteriLayout.cshtml";
}
<title>Çalışan Bilgileri</title>
  
@using (Html.BeginForm("Edit", "CalisanBilgileri", FormMethod.Post, new { id = "frmEdit", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    @Html.HiddenFor(model => model.McID)
    @Html.HiddenFor(model => model.MusteriID)

    <div class="row">
        <div class="col-md-2">
            @Html.LabelFor(model => model.UserName)
        </div>
        <div class="col-md-4">
            <input class="form-control" placeholder="UserName" name="UserName" type="text" value="@Model.UserName" required>
            @ViewBag.Message
        </div>

        <div class="col-md-6">
        </div>
    </div>
    <div class="row" style="margin-top: 10px">
        <div class="col-md-2">
            @Html.LabelFor(model => model.Password)
        </div>
        <div class="col-md-4">
            <input class="form-control" placeholder="Password" name="Password2" type="text" value="@Model.Password2" readonly>
        </div>
        <div class="col-md-6">
        </div>
    </div>
     
    
    <div class="row" style="margin-top:10px ">
        
        <div class="col-md-2"> 
        </div>
        <div class="col-md-2"> 
            <a href="@Url.Action("SifreYenile", "CalisanBilgileri", new { id = @Model.McID})" class="btn btn-default">
                Şifre Yenile
            </a>
        </div>

        <div class="col-md-2">
            <button class="btn btn-success btn-block" type="submit" value="Kaydet">
                <span class="glyphicon glyphicon-ok"></span> Kaydet
            </button> 
        </div>
    </div>

}

<script>
    function SubmitForm() {
        $("#frmEdit").submit();
    }
</script>
