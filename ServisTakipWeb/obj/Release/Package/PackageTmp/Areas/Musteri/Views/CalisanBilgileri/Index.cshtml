@model IEnumerable<ServisTakipWeb.Areas.Musteri.Models.MusteriCalisanBilgileri>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Musteri/Views/Shared/MusteriLayout.cshtml";
}  
<title>Çalışan Bilgileri</title>

<div class="row">

    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title"><i class="fa fa-table fa-fw"></i> @ServisTakipWeb.Connection.musteriCalisanBilgileri.ToString()</h3>
        </div>
        <div class="panel-body">
            <div class="row form-group">
                <div class="col-md-2"> 
                    <a href="@Url.Action("Create", "CalisanBilgileri")" class="btn btn-success">
                        Çalışan Ekle <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                    </a>
                </div>
            </div>
            <div class="table-responsive">
                <table id="data" class="table table-bordered table-hover table-striped">
                    <thead>
                        <tr> 
                            <th class="col-md-4">@Html.DisplayNameFor(model => model.UserName)</th>
                            <th class="col-md-4">@Html.DisplayNameFor(model => model.Password)</th>  
                            <th class="col-md-4">@Html.DisplayNameFor(model => model.CreateDate)</th>
                            <th class="col-md-1"></th>
                            <th class="col-md-1"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr> 
                                <td class="col-md-4">@Html.DisplayFor(modelItem => item.UserName)</td>
                                <td class="col-md-4">@Html.DisplayFor(modelItem => item.Password2)</td>  
                                <td class="col-md-4">@Html.DisplayFor(modelItem => item.CreateDate)</td>
                                <td class="col-md-1"> 
                                    <a href="@Url.Action("Edit", "CalisanBilgileri", new { id = item.McID })" class="btn btn-success">
                                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                                    </a>
                                </td>
                                <td class="col-md-1">
                                    <a href="@Url.Action("", "CalisanBilgileri", new { id = item.McID })" class="btn btn-danger">
                                        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div> 
        </div>
    </div>
</div>
