@model IEnumerable<ServisTakipWeb.Areas.FirmaYonetici.Models.MusteriBilgileri>

@{
    ViewBag.Title = "Firma Yönetici | Müşteri Bilgileri";
    Layout = "~/Areas/FirmaYonetici/Views/Shared/FirmaYoneticiLayout.cshtml";
} 
 
<title>Müşteri Bilgileri</title>

<div class="row">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title"><i class="fa fa-table fa-fw"></i> @ServisTakipWeb.Connection.musteriBilgileri.ToString()</h3>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="col-md-2">
                    @*<button type="submit" style="margin-bottom:20px" class="btn btn-outline-primary btn-block">
                        @Html.ActionLink("Yeni Kayıt", "MusteriEkle")
                    </button>*@ 
                        <a href="@Url.Action("MusteriEkle", "MusteriBilgileri")" class="btn btn-success">
                            Müşteri Ekle <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                        </a>
                    
                </div>
            </div>
            <div class="table-responsive" style="margin-top:10px;">
                <table id="data" class="table table-bordered table-hover table-striped">
                    <thead>
                        <tr>
                            @*<th class="col-md-2">@Html.DisplayNameFor(model => model.ID)</th>*@
                            <th class="col-md-4">@Html.DisplayNameFor(model => model.MusteriKodu)</th>
                            <th class="col-md-2">@Html.DisplayNameFor(model => model.MusteriAdi)</th>
                            <th class="col-md-2">@Html.DisplayNameFor(model => model.YetkiliKisi)</th>
                            <th class="col-md-4">@Html.DisplayNameFor(model => model.Password)</th>
                            <th class="col-md-4">@Html.DisplayNameFor(model => model.Tel1)</th>
                            <th class="col-md-4">@Html.DisplayNameFor(model => model.Email)</th> 
                            <th class="col-md-2">@Html.DisplayNameFor(model => model.CreateDate)</th>
                            <th class="col-md-3"></th>
                            <th class="col-md-3"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                @*<td class="col-md-2">@Html.DisplayFor(modelItem => item.ID)</td>*@
                                <td class="col-md-2">@Html.DisplayFor(modelItem => item.MusteriKodu)</td>
                                <td class="col-md-4">@Html.DisplayFor(modelItem => item.MusteriAdi)</td>
                                <td class="col-md-2">@Html.DisplayFor(modelItem => item.YetkiliKisi)</td>
                                <td class="col-md-4">@Html.DisplayFor(modelItem => item.Password2)</td>
                                <td class="col-md-4">@Html.DisplayFor(modelItem => item.Tel1)</td>
                                <td class="col-md-4">@Html.DisplayFor(modelItem => item.Email)</td> 
                                <td class="col-md-2">@Html.DisplayFor(modelItem => item.CreateDate)</td>
                                <td class="col-md-3"> 
                                    <a href="@Url.Action("Musteri", "MusteriBilgileri", new { id = item.ID })" class="btn btn-success"> 
                                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                                    </a>
                                </td>
                                <td class="col-md-3"> 
                                    <a href="@Url.Action("MusteriDelete", "MusteriBilgileri", new { id = item.ID })" class="btn btn-danger">
                                        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div> 
        </div>
    </div>
</div>  