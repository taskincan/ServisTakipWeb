@using ServisTakipWeb.Models
@model Giris

@{
    ViewBag.Title = "Servis Takip | Giriş";
    ViewBag.Description = "Servis Takip Giriş Sayfası";
}
<title>Servis Takip | Giriş</title>

<link href="~/Content/css/bootstrap.css" rel="stylesheet" />

@using (Html.BeginForm("Giris", "Giris", FormMethod.Post, new { id = "frmWhereWeGo", enctype = "multipart/form-data" }))
{
    <div class="container" style="margin-top:40px">
        <div class="row">
            <div class="col-md-4"></div>

            <div class="col-md-4">
                <div class="panel panel-default">
                    <div class="panel-heading panel-body-center">
                        <strong> Servis Yönetim ve Takip</strong>
                    </div>
                    <div class="panel-body">

                        <fieldset>
                            <div class="row">
                                <div class="center-block">
                                    <img class="profile-img"
                                         src="~/Content/img/LoginUserLogo.png" alt="">
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-10">  
                                   @* @Html.ValidationSummary()
                                        TODO: bak buraya.*@
                                    <div class="form-group">
                                        <div class="input-group">
                                            <span class="input-group-addon">
                                                <i class="glyphicon glyphicon-user"></i>
                                            </span>
                                            <input class="form-control" placeholder="Username" name="UserName" type="text" value="@Model.UserName" autofocus required>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="input-group">
                                            <span class="input-group-addon">
                                                <i class="glyphicon glyphicon-lock"></i>
                                            </span>
                                            <input class="form-control" placeholder="Password" name="Password" type="password" value="@Model.Password" required>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <input type="submit" class="btn btn-lg btn-primary btn-block" value="Giriş Yap" style=" background-color: #04B0E4;">
                                    </div>
                                </div>
                            </div>

                        </fieldset>

                    </div>
                    <div class="panel-footer ">
                        Don't have an account! <a href="#" onclick=""> Sign Up Here </a>
                    </div>
                </div>
            </div>
            <div class="col-md-4"></div>
        </div>
    </div>
}

<script>
    function SubmitForm() {
        $("#frmGiris").submit();
    }
</script>
